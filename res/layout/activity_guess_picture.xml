<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.partydrawandroid.GuessPictureActivity"
    android:layout_height="fill_parent" 
	android:layout_width="fill_parent"
	android:orientation="vertical"  
	android:gravity="center" >
	
    <LinearLayout
    android:layout_weight="1" 
   	android:layout_height="0dp" 
	android:orientation="horizontal" 
	android:layout_width="fill_parent" 
	android:gravity="center" >

    	
	    <ImageButton
	        android:id="@+id/imageView1"
	        android:layout_weight="1"
	        android:layout_width="0dp"
			android:layout_height="fill_parent"
	        android:contentDescription="@string/description"
	        android:onClick="guessPicture1" />
	    
	    <ImageButton
	        android:id="@+id/imageView2"
	        android:layout_weight="1"
	        android:layout_width="0dp" 
			android:layout_height="fill_parent"
	        android:contentDescription="@string/description"
	        android:onClick="guessPicture2" />
	    
	    <ImageButton
	        android:id="@+id/imageView3"
	        android:layout_weight="1"
	        android:layout_width="0dp" 
			android:layout_height="fill_parent"
	        android:contentDescription="@string/description"
	        android:onClick="guessPicture3" />
	</LinearLayout>
	
	<LinearLayout 
		android:layout_weight="1"
		android:layout_height="0dp" 
		android:orientation="horizontal" 
		android:layout_width="fill_parent" 
		android:gravity="center" >
	    
	    <ImageButton
	        android:id="@+id/imageView4"
	        android:layout_weight="1"
	        android:layout_width="0dp" 
			android:layout_height="fill_parent"
	        android:contentDescription="@string/description"
	        android:onClick="guessPicture4" />
	    <ImageButton
	        android:id="@+id/imageView5"
	        android:layout_weight="1"
	        android:layout_width="0dp" 
			android:layout_height="fill_parent"
	        android:contentDescription="@string/description"
	        android:onClick="guessPicture5" />
	    <ImageButton
	        android:id="@+id/imageView6"
	        android:layout_weight="1"
	        android:layout_width="0dp"
			android:layout_height="fill_parent"
	        android:contentDescription="@string/description"
	        android:onClick="guessPicture6" />
	</LinearLayout>
	
</LinearLayout>
